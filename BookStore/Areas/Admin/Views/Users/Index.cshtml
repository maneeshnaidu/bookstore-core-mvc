@model List<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <table class="table table-striped table-bordered" style="width:100%" id="usersTable">
        <thead>
            <tr>
                @*<th>Id</th>*@
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    @*<td>@user.Id</td>*@
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.DateOfBirth</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user.
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-area="" asp-controller="Account" asp-action="Signup">
                Add new user
            </a>
        </div>
    </div>
}

@section Scripts{
    <script>


    $(document).ready(function () {
        $('#usersTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv',  'print'
            ]
        });
    });

    </script>
}